{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "DetectLabelsInImages",
      "Effect": "Allow",
      "Action": ["rekognition:DetectLabels"],
      "Resource": "*"
    },
    {
      "Sid": "PutWardrobeItem",
      "Effect": "Allow",
      "Action": ["dynamodb:PutItem"],
      "Resource": "arn:aws:dynamodb:<<region>>:<<account-id>>:table/<<wardrobe-table-name>>"
    },
    {
      "Sid": "AccessWardrobeImages",
      "Effect": "Allow",
      "Action": ["s3:PutObject", "s3:GetObject"],
      "Resource": "arn:aws:s3:::<<bucket-name>>/clothes/*"
    }
  ]
}
