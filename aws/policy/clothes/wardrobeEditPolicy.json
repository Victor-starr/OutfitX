{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "DetectLabelsInImages",
      "Effect": "Allow",
      "Action": ["rekognition:DetectLabels"],
      "Resource": "*"
    },
    {
      "Sid": "ModifyWardrobeItem",
      "Effect": "Allow",
      "Action": ["dynamodb:GetItem", "dynamodb:PutItem", "dynamodb:UpdateItem"],
      "Resource": "arn:aws:dynamodb:<<region>>:<<account-id>>:table/<<wardrobe-table-name>>"
    },
    {
      "Sid": "AccessWardrobeImages",
      "Effect": "Allow",
      "Action": ["s3:PutObject", "s3:GetObject", "s3:DeleteObject"],
      "Resource": "arn:aws:s3:::<<bucket-name>>/*"
    }
  ]
}
